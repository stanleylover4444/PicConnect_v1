<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/black"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_AvataFriendLists"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/avtchatroundedImageArtistView" />


    <TextView
        android:id="@+id/text_NameFriendLists"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:paddingStart="15dp"
        android:text="Tên người dùng"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_AvataFriendLists"
        app:layout_constraintTop_toTopOf="@id/img_AvataFriendLists" />

    <ImageView
        android:id="@+id/img_Delete"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_delete"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toEndOf="@+id/text_NameFriendLists"
        app:layout_constraintTop_toTopOf="@id/text_NameFriendLists"



        />

</androidx.constraintlayout.widget.ConstraintLayout>
