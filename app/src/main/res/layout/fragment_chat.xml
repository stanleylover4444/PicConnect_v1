<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UI.Chat.FragnentOfChat.ChatFragment"
    android:background="@android:color/black">


    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:logo="@drawable/baseline_arrow_back_ios_setting"
        android:padding="4dp"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin nháº¯n"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/fonttext"            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </androidx.appcompat.widget.Toolbar>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_itemchat"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_chatfriend"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:paddingLeft="10dp"/>


</LinearLayout>