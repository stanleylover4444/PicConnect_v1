<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingTop="10dp">




    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgArtist"
        android:layout_width="54sp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avta"
        tools:ignore="MissingConstraints"
        app:shapeAppearanceOverlay="@style/roundedImageArtistView"
        />

    <TextView
        android:id="@+id/nameuser_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên người dùng"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time đã gửi"
        android:textColor="#696969"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tin nhắn cuối"
        android:textColor="#696969"
        android:textSize="10dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="32dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="27dp"
        tools:layout_editor_absoluteX="369dp"
        tools:layout_editor_absoluteY="16dp"
        android:src="@android:drawable/ic_delete"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


