<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/black"
 >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_FriendChat"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/avtchatroundedImageArtistView" />

    <TextView
        android:id="@+id/text_NameFriendChat"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Tên người dùng"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/img_FriendChat"
        app:layout_constraintStart_toEndOf="@id/img_FriendChat"
        android:paddingStart="8dp"
        />

    <TextView
        android:id="@+id/text_lastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="7dp"
        android:paddingTop="5dp"
        android:text="Tin nhắn cuối"
        android:textColor="#696969"
        android:textSize="14dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/img_FriendChat"
        app:layout_constraintStart_toEndOf="@id/img_FriendChat" />

    <TextView
        android:id="@+id/text_lasttimeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:text="Time đã gửi"
        android:textColor="#696969"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/text_NameFriendChat"
        app:layout_constraintTop_toTopOf="@id/text_NameFriendChat" />

    <ImageView
        android:id="@+id/img_Delete"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="13dp"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@id/text_lasttimeMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
